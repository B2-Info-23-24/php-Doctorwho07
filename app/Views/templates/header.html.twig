{% block html %}
  <!DOCTYPE html>
  <html lang="fr">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      {% block css %}

      {% endblock %}
      <title>
        {% block title %}

        {% endblock %}
      </title>
    </head>
  </html>
{% endblock %}
<header class="header">
  <div class="header-left">
    <a href="/">Troc Mon Toit</a>
  </div>
  <div class="header-center">
    <h1 class="page-name">{{ title }}</h1>
  </div>
  {% if admin == true %}
    <div class="admin">
      <a href="/admin/home">panel admin</a>
    </div>
  {% endif %}
  <div class="header-right">
    <a href="/user">
      <img src="/public/assets/user.png" alt="User Icon" class="user-icon" width="50px" />
      <span class="user-name">{{ userName }}</span>
    </a>
  </div>
</header>
{% block body %}

{% endblock %}
