{% extends 'templates/header.html.twig' %}
{% block title %}
  {{ Title }}
{% endblock %}
{% block css %}
  <link rel="stylesheet" href="/public/css/navbar.css" />
  <link rel="stylesheet" href="/public/css/accueil.css" />
  <link rel="stylesheet" href="/public/css/addproperties.css" />
  <link rel="stylesheet" href="/public/css/style.css" />
{% endblock %}
{% block body %}
  <body>
    <h2>{{ Title }}</h2>
    <a href="/admin/addProperty">Publier un nouveau logement</a>
    <form action="/admin/deleteProperties" method="post">
      <table>
        <thead>
          <tr>
            <th colspan="2">Liste de tous les logements</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Prix par nuitée</th>
            <th>Adresse</th>
            <th>Ville</th>
          </tr>
          {% for property in properties %}
            <tr>
              <td>{{ property.Title }}</td>
              <td>{{ property.Description }}</td>
              <td>
                <a href="/property/{{ property.ID }}"><img src="/public/images/{{ property.Image }}" alt="Property Image" width="100" /></a>
              </td>
              <td>{{ property.Price }}</td>
              <td>{{ property.Location }}</td>
              <td>{{ property.City }}</td>
              <td>
                <input type="checkbox" name="propertiesIDs[]" value="{{ property.ID }}" />
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <button type="submit">Supprimer les utilisateurs sélectionnés</button>
    </form>
  </body>
{% endblock %}
