{% extends 'templates/header.html.twig' %}
{% block title %}
  {{ title }}
{% endblock %}
{% block css %}
  <link rel="stylesheet" href="/public/css/navbar.css" />
  <link rel="stylesheet" href="/public/css/style.css" />
  <link rel="stylesheet" href="/public/css/user.css" />
{% endblock %}
{% block body %}
  <body>
    <div class="container">
      <div class="info">
        <p>Nom: {{ Lastname }}</p>
        <p>Prenom: {{ Firstname }}</p>
        <p>telephone: {{ Phone }}</p>
        <p>Email: {{ Email }}</p>
      </div>
      <div class="button">
        <a href="/disconnect" class="signin-button">Se déconnecter</a>
        <a href="/modify" class="signin-button">Modifier</a>
        <a href="/favoriteProperty" class="signin-button">Favoris</a>
        <a href="/orders" class="signin-button">Reservations</a>
      </div>

      <form action="/delete" method="post">
        <input type="email" id="email" name="email" placeholder="Email" required /><br />
        <input type="password" id="password" name="password" placeholder="Mot de passe" required /><br />
        <input type="submit" value="Supprimer mon compte définitivement" />
      </form>
    </div>
  </body>
{% endblock %}
