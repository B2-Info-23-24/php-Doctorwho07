{% extends 'templates/header.html.twig' %}
{% block title %}
  {{ Title }}
{% endblock %}
{% block css %}
  <link rel="stylesheet" href="/public/css/navbar.css" />
  <link rel="stylesheet" href="/public/css/accueil.css" />
  <link rel="stylesheet" href="/public/css/addservices.css" />
  <link rel="stylesheet" href="/public/css/style.css" />
{% endblock %}
{% block body %}
  <body>
    <h2>GÃ©rer les Services</h2>
    <form action="/admin/addService" method="post">
      <input type="text" id="serviceName" name="serviceName" placeholder="Nom du Service" required /><br />
      <input type="submit" value="Ajouter" />
    </form>
    <div class="services-list">
      {% for service in servicesList %}
        <div class="service-item">
          <span>{{ service.Type }}</span>
          <a href="/admin/deleteService/{{ service.ID }}">Supprimer</a>
