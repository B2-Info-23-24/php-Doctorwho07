{% extends 'templates/header.html.twig' %}
{% block title %}
  Admin Equipment
{% endblock %}
{% block css %}

{% endblock %}
{% block body %}
  <h2>Gérer les Équipements</h2>

  <form action="/admin/addEquipment" method="post">
    <input type="text" name="equipmentName" placeholder="Nom de l'équipement" required />
    <button type="submit">Ajouter</button>
  </form>

  <ul>
    {% for equipment in equipments %}
      <li>
        {{ equipment.Type }}
        <a href="/admin/deleteEquipment/{{ equipment.ID }}">Supprimer</a>
        <form action="/admin/updateEquipment" method="post">
          <input type="hidden" name="id" value="{{ equipment.ID }}" />
          <input type="text" name="name" placeholder="Nouveau nom" required />
          <button type="submit">Modifier</button>
        </form>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
